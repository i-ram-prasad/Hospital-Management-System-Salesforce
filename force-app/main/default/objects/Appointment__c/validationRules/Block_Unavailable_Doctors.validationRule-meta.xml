<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Block_Unavailable_Doctors</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(),TEXT( Doctor__r.Status__c ) = &quot;On Leave&quot;)</errorConditionFormula>
    <errorMessage>This Doctor is currently on leave. Please select a different doctor or check their return date</errorMessage>
</ValidationRule>
