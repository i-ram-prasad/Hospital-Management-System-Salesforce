<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Email_For_Confirmation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   ISPICKVAL(Status__c, &quot;Confirmed&quot;),
   ISBLANK(Patient__r.Email)
)</errorConditionFormula>
    <errorMessage>Cannot Confirm Appointment: This Patient does not have an email address. Please update the Patient record first.</errorMessage>
</ValidationRule>
